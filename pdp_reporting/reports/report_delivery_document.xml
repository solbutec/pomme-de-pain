<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_delivery_document_inherited" inherit_id="stock.report_delivery_document">
        <xpath expr="//h2[1]" position="after">
        	<t t-if="o.picking_type_id and o.picking_type_id.code == 'internal'">
                      <div class="row">
                          <div class="col-6">
                            <center><strong>Source: </strong><span t-field="o.picking_type_id.warehouse_id and o.picking_type_id.warehouse_id.name"/></center>
                          </div>
                          <div class="col-6">
                            <center><strong>Destination: </strong><span t-field="o.location_dest_id and o.location_dest_id.name"/> </center>
                          </div>
                      </div>
                      <br/>
                    </t>
		</xpath>
	</template>
</odoo>