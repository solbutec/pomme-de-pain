<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="pdp_pos_config_wizard" model="ir.ui.view">
        <field name="name">pos.config.wizard</field>
        <field name="model">pos.config.wizard</field>
        <field name="arch" type="xml">
            <form string="Print your current hand">
                <group>
                    <group>
                        <field name="type" required="1"/>
                        <field name="cashier_id"
                               attrs="{'invisible': [('type', '!=', 'by_op')], 'required': [('type', '=', 'by_op')]}"/>
                    </group>
                    <group>
                        <field name="debut_date" required="1"/>
                        <field name="end_date" required="1"/>
                    </group>
                </group>
                <footer>
                    <button name="action_print"
                            string="Print" type="object"
                            class="btn-primary"/>
                    <button string="Cancel"
                            class="btn-default"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="action_view_pdp_pos_reporting_wizard" model="ir.actions.act_window">
        <field name="name">Print your current hand</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">pos.config.wizard</field>
        <!--        <field name="context">{'default_crm_lead_id': active_id}</field>-->
        <field name="view_id" ref="pdp_reporting.pdp_pos_config_wizard"/>
        <field name="target">new</field>
    </record>

    <record id="pdp_pos_config_kanban" model="ir.ui.view">
        <field name="name">pos.config.kanban</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_config_kanban"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('container', 'o_kanban_card_manage_pane', 'dropdown-menu')]/div"
                   position="inside">
                <div class="col-6 o_kanban_card_manage_section o_kanban_manage_new">
                    <div role="menuitem" class="o_kanban_card_manage_title">
                        <span>Reports</span>
                    </div>
                    <div role="menuitem">
                        <a name="%(pdp_reporting.action_view_pdp_pos_reporting_wizard)d" type="action">Print report</a>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>