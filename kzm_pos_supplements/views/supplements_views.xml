<odoo>
    <data>
        <record id="ace_view_pos_config_form" model="ir.ui.view" >
	        <field name="name">pos.config.form.view.inherit</field>
	        <field name="model">pos.config</field>
	        <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
	        <field name="arch" type="xml">
	            <div id="category_reference" position="before">
		            <div class="col-xs-12 col-md-9 o_setting_box" id="config_enable_supplement">
		                <div class="o_setting_left_pane">
		                    <field name="enable_supplement"/>
		                </div>
	                	<div class="o_setting_right_pane">
	                     	<label for="enable_supplement"/>
	                     	<div class="text-muted" id="lbl_show_image">
	                        	Use supplements feature in restaurant
	                     	</div>
	                    </div>
	                </div>
                </div>
			</field>
		</record>

        <record id="package_product_template_only_form_view" model="ir.ui.view">
	        <field name="name">package.product.template.form.view</field>
	        <field name="model">product.template</field>
	        <field name="inherit_id" ref="product.product_template_form_view"/>
	        <field name="arch" type="xml">
	            <field name="sale_ok" position="before">
	                <div>
	                    <field name="with_supplements"/>
	                    <label for="with_supplements"/>
	                </div>
	            </field>
				<xpath expr='//page[4]' position="after" >
	               <page string="Supplements"  attrs="{'invisible': [('with_supplements', '=', False)]}">
	                   <field name="pos_supplement_ids">
	                       <tree editable="bottom">
	                           <field name="product_id"/>
	                           <field name="price_unit"/>
                           </tree>
	                   </field>
	               </page>
				</xpath>
	        </field>
    </record>

    </data>
</odoo>
