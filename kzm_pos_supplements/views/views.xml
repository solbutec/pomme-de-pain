<odoo>
  <data>
    <record id="test_pos_config_inherit" model="ir.ui.view" >
      <field name="name">pos.config.form.pos.sale</field>
	        <field name="model">pos.config</field>
	        <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
	        <field name="arch" type="xml">
             <sheet position="inside">
               <h2>Supplements</h2>
               <div class="row mt16 o_settings_container" id="pos_suppl">
                 <div class="o_setting_left_pane">
                   <field name="supplement"/>
                 </div>
                 <div class="o_setting_right_pane">
                   <label for="supplement"/>
                   <div class="text-muted" id="lbl_show_image">
	                        	Activer l'ajout des supplement
                   </div>
                 </div>
               </div>
             </sheet>
            </field>
    </record>
<record id="package_product_template_only_form_view" model="ir.ui.view">
	        <field name="name">package.product.template.form.view</field>
	        <field name="model">product.template</field>
	        <field name="inherit_id" ref="product.product_template_form_view"/>
	        <field name="arch" type="xml">
	            <field name="sup" position="before">
	                <div>
	                    <field name="with supplements"/>
	                    <label for="with supplements"/>
	                </div>
	            </field>
	        </field>
    </record>

  </data>
</odoo>
